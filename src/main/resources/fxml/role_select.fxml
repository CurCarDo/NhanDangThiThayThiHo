<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="800" prefWidth="1200" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faceproctoring.controller.RoleSelectController">

    <!-- Background -->
    <ImageView fitHeight="800" fitWidth="1200" opacity="1.0" preserveRatio="false">
        <image>
            <Image url="@/images/maxresdefault.jpg" />
        </image>
    </ImageView>
    
    <Rectangle arcHeight="24" arcWidth="24" fill="#FFFFFFAA" height="819.0" width="1200.0" />


    <StackPane maxHeight="560" maxWidth="920" style="-fx-background-color: white; -fx-background-radius: 18; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 20, 0, 0, 8);">
        <children>
            <HBox prefHeight="520" prefWidth="900" spacing="0">

            <VBox alignment="CENTER" prefHeight="520" prefWidth="900" spacing="25">
                <padding>
                    <Insets bottom="40" left="60" right="60" top="40" />
                </padding>

                <ImageView fitHeight="120" fitWidth="120" preserveRatio="true">
                    <image>
                        <Image url="@/images/huit-logo.png" />
                    </image>
                </ImageView>

                <VBox alignment="CENTER" spacing="6">
                    <Label style="-fx-text-fill: #0056d2; -fx-font-weight: bold;" text="CHÀO MỪNG BẠN ĐẾN HỆ THỐNG">
                        <font>
                            <Font name="Arial Bold" size="26" />
                        </font>
                    </Label>

                    <Label style="-fx-text-fill: #007bff; -fx-font-weight: bold;" text="NHẬN DIỆN THI THAY THI HỘ">
                        <font>
                            <Font name="Arial Bold" size="18" />
                        </font>
                    </Label>

                    <Label style="-fx-text-fill: #444444;-fx-font-weight: bold;" text="Trường Đại học Công Thương TP. Hồ Chí Minh">
                        <font>
                            <Font name="Arial" size="14" />
                        </font>
                    </Label>
                </VBox>

                <Label style="-fx-font-size: 15; -fx-text-fill: #333333;" text="Vui lòng chọn vai trò của bạn" />

                <HBox alignment="CENTER" spacing="50">

                    <VBox alignment="CENTER" prefHeight="220" prefWidth="260" spacing="12" style="-fx-background-color: white; -fx-background-radius: 16; -fx-border-radius: 16;                                  -fx-border-color: #dddddd; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);">
                        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

                        <StackPane alignment="CENTER">
                            <children>
                                <Circle fill="#D9EAFD" radius="36" stroke="#ffffff" strokeWidth="2" />
                                <ImageView fx:id="studentIcon" fitHeight="40" fitWidth="40" preserveRatio="true" />
                            </children>
                        </StackPane>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="SINH VIÊN" />
                        <Label style="-fx-text-fill: #777; -fx-font-size: 13;" text="Đăng nhập để tham gia kỳ thi" />

                        <Button fx:id="btnStudent" onAction="#onStudent" prefWidth="120" style="-fx-background-color: #007bff; -fx-text-fill: white;                                        -fx-background-radius: 8; -fx-cursor: hand;" text="Đăng nhập" />
                    </VBox>

                    <VBox alignment="CENTER" prefHeight="220" prefWidth="260" spacing="12" style="-fx-background-color: white; -fx-background-radius: 16; -fx-border-radius: 16;                                  -fx-border-color: #dddddd; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);">
                        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

                        <StackPane alignment="CENTER">
                            <children>
                                <Circle fill="#D9EAFD" radius="36" stroke="#ffffff" strokeWidth="2" />
                                <ImageView fx:id="giamthiIcon" fitHeight="40" fitWidth="40" preserveRatio="true" />
                            </children>
                        </StackPane>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="GIÁM THỊ" />
                        <Label style="-fx-text-fill: #777; -fx-font-size: 13;" text="Quản lý và giám sát kỳ thi" />

                        <Button fx:id="btnAdmin" onAction="#onAdmin" prefWidth="120" style="-fx-background-color: #007bff; -fx-text-fill: white;                                        -fx-background-radius: 8; -fx-cursor: hand;" text="Đăng nhập" />
                    </VBox>

                </HBox>
            </VBox>
            </HBox>
        </children>
    </StackPane>

</StackPane>
